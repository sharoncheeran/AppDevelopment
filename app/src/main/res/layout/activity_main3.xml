<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:padding="5dp"
    tools:context=".Main3Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-medium"
        android:text="What would you like to do?"
        android:textColor="#000000"
        android:textSize="25sp" />

    <Button
        android:id="@+id/CarDetail"
        android:layout_width="296dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="120dp"
        android:background="#FD0128"
        android:text="Enter car details"
        android:textSize="20sp" />

    <Button
        android:id="@+id/CarOP"
        android:layout_width="296dp"
        android:layout_height="72dp"
        android:layout_below="@+id/CarDetail"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="28dp"
        android:background="#26FF00"
        android:text="Car operations"
        android:textSize="20sp" />

    <Button
        android:id="@+id/CarStat"
        android:layout_width="296dp"
        android:layout_height="72dp"
        android:layout_below="@+id/CarOP"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="28dp"
        android:background="#1100FF"
        android:text="Car status"
        android:textSize="20sp" />

    <Button
        android:id="@+id/UserPro"
        android:layout_width="296dp"
        android:layout_height="72dp"
        android:layout_below="@+id/CarStat"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="28dp"
        android:background="#F83E03"
        android:text="User Profile"
        android:textSize="20sp" />


</RelativeLayout>